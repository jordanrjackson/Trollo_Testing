<h1 class="ui header"><%= @board.name %></h1>
<%= link_to 'Edit Board', edit_board_path(@board), class: "ui small blue button" %>
<%= link_to "New List", new_board_list_path(@board), class: "ui small green button" %>
<div class="ui divider"></div>

<div class="ui three column grid">
  <% @lists.each do |list| %>
    <div class="column">
      <div class="ui fluid card">
        <div class="content">
          <div class="header"><%= list.name %></div>
          <div class="description"><%= list.description %></div>
        </div>
        <div class="content">
          <h4 class="ui sub header">Tasks</h4>
          <div class="event">
            <div class="content">
              <div class="summary">
                <% list.tasks.each do |task| %>
                  <div class="center aligned header">
                  <%= "#{task.name}" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="content">
          <div class="ui two buttons">
            <%= link_to 'Show Tasks', list_tasks_path(list), class: "ui teal button" %>
          </div>
        </div>
        <div class="extra content">
          <div class="ui two buttons">
              <%= link_to 'Edit', edit_board_list_path(@board), class: "ui blue button" %>
              <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui red button" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>